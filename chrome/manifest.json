{
  "name": "Hackage-Fu",
  "version": "0.1.0.0",
  "description": "Productivity Tools for HackageDB",

  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },

  "homepage_url": "https://github.com/statusfailed/hackage-fu",

